<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/expanded_notification_height"
    android:background="@android:color/transparent"
    android:layout_margin="10dp" >

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PREVIEW"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/notification_name_text_size"
        android:layout_toLeftOf="@id/controlLinearLayout" />

    <TextView
        android:id="@+id/artistTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:text="PREVIEW"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@id/controlLinearLayout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/controlLinearLayout"
        android:layout_alignParentEnd="true" >

        <ImageView
            android:id="@+id/previousImageView"
            android:layout_width="@dimen/expanded_notification_icon_size"
            android:layout_height="@dimen/expanded_notification_icon_size"
            android:src="@drawable/ic_skip_previous_black_36dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/pauseImageView"
            android:layout_width="@dimen/expanded_notification_icon_size"
            android:layout_height="@dimen/expanded_notification_icon_size"
            android:src="@drawable/ic_play_arrow_black_36dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/nextImageView"
            android:layout_width="@dimen/expanded_notification_icon_size"
            android:layout_height="@dimen/expanded_notification_icon_size"
            android:src="@drawable/ic_skip_next_black_36dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/closeImageView"
            android:layout_width="@dimen/expanded_notification_icon_small_size"
            android:layout_height="@dimen/expanded_notification_icon_small_size"
            android:src="@drawable/ic_close_black_24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackgroundBorderless" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />

    <ProgressBar
        android:layout_marginTop="@dimen/expanded_notification_icon_size"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expanded_notification_icon_small_size"
        android:id="@+id/timeProgressBar"
        android:max="100"
        android:progress="0"
        android:layout_below="@id/controlLinearLayout" />

    <TextView
        android:id="@+id/currentDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timeProgressBar" />

    <TextView
        android:id="@+id/durationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="00:00"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/timeProgressBar" />

</RelativeLayout>