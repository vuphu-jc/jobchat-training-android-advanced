<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/tab_layout_icon_size"
    android:layout_height="@dimen/tab_layout_icon_size"
    android:gravity="center" >

    <ImageView
        android:id="@+id/imgCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_circle_black_24dp"
        android:tint="@color/colorTabLayoutIcon"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvFirstLetter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/black"
        android:text="P"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>